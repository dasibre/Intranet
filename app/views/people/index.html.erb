<% provide(:title, "Home Page") %>
<table class="table table-bordered">
<% @people.each do |person| %>
	<tr>
		<td><%=	person.last_name %></td>
		<td><%=	person.work_phone %></td>
		<td><%=	person.email %></td>
		<td><%=	person.gender %></td>
		<td><%= link_to person.full_name, person_path(person) %></td>
	</tr>
<% end %>
</table>
