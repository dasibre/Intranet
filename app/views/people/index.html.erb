<h1>Customers</h1>
<% provide(:title, "Home Page") %>
<table class="table table-bordered">
	<thead>
		<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email Address</th>
		<th>Gender</th>
		<th>Actions</th>
	</tr>
	</thead>
	<tbody>
<% @people.each do |person| %>
	<tr>
		<td><%=	person.first_name %></td>
		<td><%=	person.last_name %></td>
		<td><%=	person.email %></td>
		<td><%=	person.gender %></td>
		<td><%= link_to person.full_name, person_path(person) %> | 
			<%= link_to 'edit', edit_person_path(person) %> | 
			<%= link_to 'delete', person_path(person, :destroy => true), :confirm => "Are you sure", 
																		  :method => :delete %>
		</td>
	</tr>
<% end %>
</tbody>
</table>
</div>
